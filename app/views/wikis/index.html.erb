<h1>Wikis</h1>

<div class="row">
  <div class="col-md-8">
    <% @wikis.each do |wiki| %>
      <div class="media">
        <div class="media-body">
          <h4 class="media-heading">
            <%= link_to wiki.title, wiki %>
          </h4>
          <small>
            updated <%= time_ago_in_words(wiki.updated_at) %> ago by <%= wiki.user.first_name + " " + wiki.user.last_name %>
          </small>
        </div>
      </div>
    <% end %>
  </div>
  <% if current_user %>
    <div class="col-md-4">
      <%= link_to "Create new wiki", new_wiki_path, class: 'btn btn-primary' %>
    </div>
  <% end %>
</div>
