<h1>Wikis</h1>

<div class="row">
  <div class="col-md-8">
    <% @wikis.each do |wiki| %>
      <% updater = User.find_by_id(wiki.updated_by) %>
      <div class="media">
        <div class="media-body">
          <h4 class="media-heading">
            <%= link_to wiki.title, wiki %>
            <% if wiki.private %>
              <span class="info private-post">P</span>
            <% end %>
          </h4>
          <small>
            updated <%= time_ago_in_words(wiki.updated_at) %> ago by <%= updater.first_name + " " + updater.last_name %>
            <% if updater.admin? %>
              <span class="info user-role-admin"><%= updater.role %></span>
            <% end %>
          </small>
        </div>
      </div>
    <% end %>
  </div>
  <% if current_user %>
    <div class="col-md-4">
      <%= link_to "Create new wiki", new_wiki_path, class: 'btn btn-primary' %>
    </div>
  <% end %>
</div>
